<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".TileFragment"
    android:id="@+id/frameLayout">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="67.5dp"
        android:layout_height="67.5dp"
        android:clickable="false"
        android:src="@drawable/tile_background_violet"
        tools:layout_conversion_absoluteHeight="57dp"
        tools:layout_conversion_absoluteWidth="57dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textViewNb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:text="  2"
        android:textColor="#1A0061"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="49dp"
        tools:layout_conversion_absoluteWidth="39dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/boom"
        android:layout_width="67.5dp"
        android:layout_height="67.5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/boom"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageViewForeground"
        android:layout_width="67.5dp"
        android:layout_height="67.5dp"
        android:src="@drawable/tile_foreground_violet"
        tools:layout_conversion_absoluteHeight="57dp"
        tools:layout_conversion_absoluteWidth="57dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</FrameLayout>